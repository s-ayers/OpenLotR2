{
  "name": "openlotr2",
  "title": "Open Lords of the Realm2",
  "homepage": "https://github.com/s-ayers/OpenLotR2",
  "version": "0.0.1-alpha",
  "description": "Open Lords of the Realm 2",
  "extends": "./node_modules/electron-webpack/tsconfig-base.json",
  "main": "src/main/index.ts",
  "scripts": {
    "postinstall": "npm run postinstall:electron && electron-builder install-app-deps",
    "postinstall:web": "node postinstall-web",
    "postinstall:electron": "node postinstall",
    "start": "electron-webpack dev",
    "build": "npm run postinstall:electron && npm run electron:serve-tsc && webpack:prod src/www/index.ts",
    "build:dev": "npm run build -- -c dev",
    "build:prod": "npm run build -- -c production",
    "build:docs": "./doc/make singlehtml  && xcopy /Y /R /E .\\doc\\_build\\singlehtml\\* .\\static\\docs\\",
    "compile": "electron-webpack",
    "electron": "electron src/main/index.ts",
    "server": "node src/main/index.ts",
    "lint": "eslint --ignore-path .gitignore ./src/*",
    "webpack:dev": "electron-webpack dev",
    "webpack:prod": "electron-webpack",
    "electron:serve-tsc": "tsc -p tsconfig-serve.json",
    "electron:serve": "wait-on http-get://localhost:${process.env.ELECTRON_WEBPACK_WDS_PORT}` && npm run electron:serve-tsc && electron . --serve",
    "electron:local": "yarn compile && electron .",
    "electron:linux": "yarn compile && electron-builder build --linux",
    "electron:windows": "yarn compile && electron-builder build --windows",
    "electron:mac": "yarn compile && electron-builder build --mac"
  },
  "keywords": [
    "phaser",
    "express",
    "electron"
  ],
  "author": "Steve Ayers",
  "license": "GPL-3.0-or-later",
  "engines": {
    "node": ">=10.9.0"
  },
  "dependencies": {
    "about-window": "^1.13.1",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.0.6",
    "babel-preset-env": "^1.7.0",
    "bufferutil": "^4.0.1",
    "dplay": "file:.\\dplay\\",
    "electron-serve": "^0.3.0",
    "electron-settings": "^3.2.0",
    "express": "^4.17.1",
    "io": "^1.0.0",
    "nedb": "^1.8.0",
    "phaser": "^3.18.1",
    "pl8image": "github:s-ayers/pl8image",
    "png-crop": "^0.0.2",
    "socket.io": "^2.2.0",
    "source-map-support": "^0.5.13",
    "utf-8-validate": "^5.0.2"
  },
  "devDependencies": {
    "@azerion/phaser-input": "^2.0.5",
    "copy-webpack-plugin": "^5.0.3",
    "electron": "^22.3.21",
    "electron-builder": "^21.2.0",
    "electron-reload": "^1.4.1",
    "electron-webpack": "^2.6.2",
    "eslint": "^5.16.0",
    "file-loader": "^4.1.0",
    "live-server": "^1.2.1",
    "mocka": "^0.0.1",
    "npm-run-all": "^4.1.5",
    "spectron": "^7.0.0",
    "ts-loader": "^6.0.4",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "typescript": "^3.5.3",
    "url-loader": "^2.1.0",
    "wait-on": "^3.3.0",
    "webpack": "^4.36.1",
    "webpack-cli": "^3.3.6",
    "webpack-dev-middleware": "^3.7.0",
    "webpack-dev-server": "^3.7.2"
  }
}
